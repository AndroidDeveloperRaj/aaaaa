<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp30"
        android:background="@drawable/shape_sou_suo_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:text="金额"
            android:textColor="@color/black_new_two"
            android:textSize="@dimen/dp15" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/tv_yuan"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/dp10"
                    android:background="@color/transparent"
                    android:gravity="end"
                    android:inputType="number|numberDecimal"
                    android:hint="0.00"
                    android:text=""
                    android:textColor="@color/black_new_two"
                    android:textColorHint="@color/base_9E9FAB"
                    android:textSize="@dimen/sp15" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:text="元"
                android:textColor="@color/black_new_two"
                android:textSize="@dimen/dp15" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        android:background="@drawable/shape_sou_suo_white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_write_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="left|top"
            android:hint="你好,可以交个朋友吗！"
            android:padding="@dimen/dp10"
            android:text=""
            android:textColor="@color/black_new_two"
            android:textColorHint="@color/base_9E9FAB"
            android:textSize="@dimen/sp15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_money_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="￥"
            android:textColor="@color/black_new_two"
            android:textSize="@dimen/dp20" />

        <TextView
            android:id="@+id/tv_end_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/black_new_two"
            android:textSize="@dimen/dp40" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_fa_red_bao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp42"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp25"
        android:background="@drawable/shape_onclick"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="塞钱进红包"
            android:textColor="@color/white"
            android:textSize="@dimen/dp15" />
    </LinearLayout>
</LinearLayout>
