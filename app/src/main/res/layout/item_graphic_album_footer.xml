<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp10">

    <ImageView
        android:id="@+id/iv_add_photovideo"
        android:layout_width="@dimen/dp35"
        android:layout_height="@dimen/dp24"
        android:layout_centerInParent="true"
        android:background="@mipmap/tuwen_button_jia3x" />

    <LinearLayout
        android:id="@+id/ll_add_content"
        android:layout_width="@dimen/dp160"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_photovedio_item"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_add_textcontent"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:padding="@dimen/dp5"
            android:src="@mipmap/tuwen_tianjiawenzi3x" />

        <ImageView
            android:id="@+id/iv_add_piccontent"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="@dimen/dp37"
            android:padding="@dimen/dp5"
            android:src="@mipmap/tuwen_tianjiazhaopian3x" />
    </LinearLayout>
</RelativeLayout>
