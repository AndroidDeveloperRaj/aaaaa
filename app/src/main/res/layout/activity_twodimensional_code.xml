<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_marginLeft="@dimen/dp38"
        android:layout_marginRight="@dimen/dp38"
        android:layout_marginTop="@dimen/dp60"
        android:background="@drawable/shape_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp130"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.merrichat.net.view.CircleImageView
                android:id="@+id/civ_group_photo"
                android:layout_width="@dimen/dp76"
                android:layout_height="@dimen/dp76"
                android:layout_marginLeft="@dimen/dp20"
                android:background="@mipmap/ic_preloading" />

            <TextView
                android:id="@+id/tv_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:text="讯美官方购物群"
                android:textColor="@color/black_new_two"
                android:textSize="@dimen/dp22" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_erwei_code"
            android:layout_width="@dimen/dp255"
            android:layout_height="@dimen/dp255"
            android:layout_gravity="center_horizontal"
            android:background="@color/gray_D8D8D8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp20"
            android:text="朋友扫描二维码下载APP自动进群"
            android:textColor="@color/base_888888"
            android:textSize="@dimen/dp12" />
    </LinearLayout>

</LinearLayout>
