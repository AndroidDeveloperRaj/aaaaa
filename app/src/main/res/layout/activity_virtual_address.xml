<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="账号类型"
                android:textColor="@color/normal_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="@dimen/dp5"
                android:drawableRight="@mipmap/xiayiceng_button_tongyong2x"
                android:gravity="left|center_vertical"
                android:hint="请输入账号类型如邮箱、社交账号"
                android:textColor="@color/normal_black"
                android:textColorHint="#9E9FAB"
                android:textSize="15sp" />
        </LinearLayout>


        <View style="@style/line_width_left" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="账号名称"
                android:textColor="@color/normal_black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editText_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入账号名称"
                android:maxLength="16"
                android:textColor="@color/normal_black"
                android:textColorHint="#9E9FAB"
                android:textSize="@dimen/sp15" />
        </LinearLayout>


        <View style="@style/line_width_left" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp110"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp18">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="账号地址"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/sp15" />

            <EditText
                android:id="@+id/editText_detail_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="top"
                android:hint="请输入账号详细地址"
                android:textColor="@color/normal_black"
                android:textColorHint="#9E9FAB"
                android:textSize="@dimen/sp15" />
        </LinearLayout>

        <View style="@style/line_width_left" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp110"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp18">

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="账号地址"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/sp15" />

            <EditText
                android:id="@+id/et_re_detail_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="top"
                android:hint="请再次输入账号详细地址"
                android:textColor="@color/normal_black"
                android:textColorHint="#9E9FAB"
                android:textSize="@dimen/sp15" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>