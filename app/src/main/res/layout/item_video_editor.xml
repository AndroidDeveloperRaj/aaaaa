<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp40">

    <LinearLayout
        android:id="@+id/lin_parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp40"
        android:orientation="horizontal"/>

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_alignTop="@+id/lin_parent"
        android:layout_toLeftOf="@+id/view_right"
        android:layout_toRightOf="@+id/view_left"
        android:background="@color/normal_red"/>

    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_alignBottom="@+id/lin_parent"
        android:layout_toLeftOf="@+id/view_right"
        android:layout_toRightOf="@+id/view_left"
        android:background="@color/normal_red"/>

    <View
        android:id="@+id/view_left"
        android:layout_width="@dimen/dp10"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@color/normal_red"/>

    <View
        android:id="@+id/view_right"
        android:layout_width="@dimen/dp10"
        android:layout_height="match_parent"
        android:layout_alignRight="@+id/lin_parent"
        android:background="@color/normal_red"/>
</RelativeLayout>