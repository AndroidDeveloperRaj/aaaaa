<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp100"
                android:background="@mipmap/ic_state_bar_bg"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_group_buy_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp45"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/tv_group_buy_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_group_buy_info"
                    android:layout_marginLeft="@dimen/dp45"
                    android:layout_marginTop="@dimen/dp8"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp12" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dp16"
                android:paddingRight="@dimen/dp10"
                android:paddingBottom="@dimen/dp16">

                <TextView
                    android:id="@+id/receiving_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="收货人："
                    android:textColor="@color/black_262626"
                    android:textSize="@dimen/sp14" />


                <TextView
                    android:id="@+id/receiving_phone_nu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text=""
                    android:textColor="@color/black_262626"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/receiving_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/receiving_name"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp8"
                    android:text="收货地址："
                    android:textColor="@color/black_262626"
                    android:textSize="13sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:background="@color/background" />

            <RelativeLayout
                android:id="@+id/rl_reason_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:background="@color/white"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl1_reason_text_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp10"
                        android:text="拒绝原因"
                        android:textColor="@color/black_262626" />

                    <TextView
                        android:id="@+id/tv_reason_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp10"
                        android:text=""
                        android:textColor="@color/black_262626" />

                </RelativeLayout>

                <View
                    android:id="@+id/rl_line2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp15"
                    android:layout_alignParentBottom="true"
                    android:background="@color/background" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_refund_reson"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:background="@color/white"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_refund"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp10"
                        android:text="退款原因"
                        android:textColor="@color/black_262626" />

                    <TextView
                        android:id="@+id/tv_return_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp10"
                        android:text=""
                        android:textColor="@color/black_262626" />

                </RelativeLayout>

                <View
                    android:id="@+id/rl_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp15"
                    android:layout_below="@+id/rl_refund"
                    android:background="@color/background" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_photo_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/dp10"
                android:visibility="gone">

                <TextView
                    android:id="@+id/add_image_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="图片证据"
                    android:textColor="@color/normal_gray" />


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@+id/add_image_title"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginBottom="@dimen/dp18"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/id_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"></LinearLayout>
                </HorizontalScrollView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp10"
                    android:layout_alignParentBottom="true"
                    android:background="@color/background" />


            </RelativeLayout>


            <TextView
                android:id="@+id/tv_seller_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp10"
                android:text="卖家昵称："
                android:textColor="@color/black_262626"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:id="@+id/rl_buy_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp44"
                android:background="@color/white"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp0.5"
                    android:background="@color/base_d1dq" />

                <TextView
                    android:id="@+id/tv_trans_type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="交易群/方式"
                    android:textColor="@color/black_262626"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/tv_trans_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_toStartOf="@+id/textView"
                    android:text="私信交易"
                    android:textColor="@color/black_262626"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="@dimen/dp8"
                    android:layout_height="13dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@mipmap/xiayiceng_button_tongyong2x" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_sell_content"
                android:layout_width="match_parent"
                android:layout_height="122dp"
                android:layout_below="@+id/tv_sell_name"
                android:background="@color/white_2">

                <ImageView
                    android:id="@+id/iv_sell_content_url"
                    android:layout_width="@dimen/dp92"
                    android:layout_height="@dimen/dp92"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:background="@color/background" />

                <TextView
                    android:id="@+id/tv_sell_content_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp18"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_toRightOf="@+id/iv_sell_content_url"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="@color/black_262626"
                    android:textSize="@dimen/sp15" />


                <TextView
                    android:id="@+id/tv_sell_content_discripe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_sell_content_title"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_toRightOf="@+id/iv_sell_content_url"
                    android:text=""
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/sp12" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dp16"
                android:paddingRight="@dimen/dp10"
                android:paddingBottom="@dimen/dp16">

                <TextView
                    android:id="@+id/tv_single_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="商品单价"
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tramp_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_single_price"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="运费"
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/sp12" />


                <TextView
                    android:id="@+id/goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tramp_cost"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="商品数量"
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/goods_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/goods_name"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="商品总价"
                    android:textColor="@color/black_262626"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/goods_real_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/goods_cost"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="实付款(含运费)"
                    android:textColor="@color/black_262626"
                    android:textSize="@dimen/sp12" />


                <TextView
                    android:id="@+id/single_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="￥0"
                    android:textColor="@color/black_new_two"
                    android:textSize="@dimen/sp12" />


                <TextView
                    android:id="@+id/receiving_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/single_price"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="￥0"
                    android:textColor="@color/black_new_two"
                    android:textSize="@dimen/sp12" />


                <TextView
                    android:id="@+id/goods_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/receiving_price"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="1"
                    android:textColor="@color/black_new_two"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/goods_all_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/goods_count"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="￥0"
                    android:textColor="@color/base_FF3D6F"
                    android:textSize="@dimen/sp12" />


                <TextView
                    android:id="@+id/real_pay_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/goods_all_price"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="￥0"
                    android:textColor="@color/base_FF3D6F"
                    android:textSize="@dimen/sp12" />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:background="@color/background" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dp16"
                android:paddingRight="@dimen/dp10"
                android:paddingBottom="@dimen/dp16">

                <TextView
                    android:id="@+id/seller_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="卖家昵称 "
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/sp12" />


                <TextView
                    android:id="@+id/seller_order_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seller_name"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="订单编号 "
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/sp12" />


                <TextView
                    android:id="@+id/copy_order"
                    android:layout_width="@dimen/dp31"
                    android:layout_height="@dimen/dp15"
                    android:layout_below="@+id/seller_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="#FF3D6F"
                    android:gravity="center"
                    android:text="复制"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp10" />


                <TextView
                    android:id="@+id/pay_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seller_order_name"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="支付方式  微信/支付宝/余额"
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/sp12" />


                <TextView
                    android:id="@+id/pay_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pay_model"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="付款时间  "
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/deliver_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pay_time"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="发货时间  "
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/sp12"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_receive_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/deliver_time"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="签收时间  "
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/sp12"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_sign_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_receive_time"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="发起退款  "
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/sp12"
                    android:visibility="gone" />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp80"
                android:background="@color/background" />


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/buttom_bar"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:background="@color/base_d1dq"></View>

        <TextView
            android:id="@+id/tv_bottom_detail_1"
            android:layout_width="@dimen/dp75"
            android:layout_height="@dimen/dp25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp15"
            android:background="@drawable/shape_contact_buyer"
            android:gravity="center"
            android:text="联系卖家"
            android:textColor="@color/base_093FFF"
            android:textSize="@dimen/sp12" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_bottom_detail_2"
                android:layout_width="@dimen/dp75"
                android:layout_height="@dimen/dp25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp15"
                android:layout_toLeftOf="@+id/tv_bottom_detail_3"
                android:background="@drawable/shape_contact_buyer"
                android:gravity="center"
                android:text="联系卖家"
                android:textColor="@color/base_093FFF"
                android:textSize="@dimen/sp12" />


            <TextView
                android:id="@+id/tv_bottom_detail_3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp15"
                android:background="@drawable/shape_contact_seller"
                android:gravity="center"
                android:paddingLeft="@dimen/dp13"
                android:paddingRight="@dimen/dp13"
                android:text="邀请好友 24:00:00"
                android:textColor="@color/FF3D6F"
                android:textSize="@dimen/sp12" />


        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>