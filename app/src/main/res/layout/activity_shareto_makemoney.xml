<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_toshare_makemoney"
        android:layout_below="@+id/rl_title"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_ad_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_no_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="你还没有一代二代好友，赶快收徒好友赚钱吧~"
            android:textColor="@color/base_888888"
            android:textSize="@dimen/sp14"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_toshare_makemoney"
        style="@style/text_ffffff_15sp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentBottom="true"
        android:background="@color/FF3D6F"
        android:gravity="center"
        android:text="收徒赚钱" />
</RelativeLayout>