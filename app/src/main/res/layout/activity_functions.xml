<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_yijian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp64"
            android:padding="@dimen/dp10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="意见反馈"
                android:textColor="@drawable/selector_homesetting_text"
                android:textSize="@dimen/dp15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/xiayiceng_button_tongyong2x" />
        </RelativeLayout>

        <View style="@style/line_width_left" />

        <RelativeLayout
            android:id="@+id/rl_guanyu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp64"
            android:padding="@dimen/dp10"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="关于我们"
                android:textColor="@drawable/selector_homesetting_text"
                android:textSize="@dimen/dp15" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/xiayiceng_button_tongyong2x" />
        </RelativeLayout>

        <View style="@style/line_width_left" />

        <RelativeLayout
            android:id="@+id/rl_qingchu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp64"
            android:padding="@dimen/dp10">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="清除缓存"
                android:textColor="@drawable/selector_homesetting_text"
                android:textSize="@dimen/dp15" />

            <TextView
                android:id="@+id/iv_checked"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/dp5"
                android:drawableRight="@mipmap/xiayiceng_button_tongyong2x"
                android:gravity="center_vertical"
                android:text="13.2M" />
        </RelativeLayout>

        <View style="@style/line_width_match" />
    </LinearLayout>
</LinearLayout>