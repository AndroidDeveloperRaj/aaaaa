<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_arbitration_goods"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:background="@color/white_2">

            <ImageView
                android:id="@+id/iv_product_picture"
                android:layout_width="@dimen/dp92"
                android:layout_height="@dimen/dp92"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@mipmap/load"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/tv_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp18"
                android:layout_toRightOf="@+id/iv_product_picture"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/black_262626"
                android:textSize="@dimen/sp15" />


            <TextView
                android:id="@+id/tv_product_specifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_product_title"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp5"
                android:layout_toRightOf="@+id/iv_product_picture"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp12" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp77"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="运费"
                    android:textColor="@color/base_888888"
                    android:textSize="@dimen/dp12" />

                <TextView
                    android:id="@+id/tv_shipping_costs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:text=""
                    android:textColor="@color/black_new_two"
                    android:textSize="@dimen/dp12" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="商品数量"
                    android:textColor="@color/base_888888"
                    android:textSize="@dimen/dp12" />

                <TextView
                    android:id="@+id/tv_products_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:text=""
                    android:textColor="@color/black_new_two"
                    android:textSize="@dimen/dp12" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="订单总金额(含运费)"
                    android:textColor="@color/black_new_two"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/tv_order_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:text=""
                    android:textColor="@color/base_FF3D6F"
                    android:textSize="@dimen/dp12" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_agree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/accept_2x" />


                <TextView
                    android:id="@+id/tv_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp8"
                    android:text="同意仲裁退款"
                    android:textColor="@color/base_FF3D6F"
                    android:textSize="@dimen/dp14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_disagree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_disagree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/button_weixuanzhong_shixin" />

                <TextView
                    android:id="@+id/tv_disagree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp8"
                    android:text="不同意仲裁退款"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp14" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp10" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp140">

            <EditText
                android:id="@+id/et_reason"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="left|top"
                android:hint="请输入仲裁原因(最多200字)"
                android:maxLength="200"
                android:padding="@dimen/dp10"
                android:textColor="@color/normal_black"
                android:textColorHint="@color/text_gray"
                android:textSize="@dimen/sp15" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_determine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/base_FF3D6F"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/dp14" />
    </LinearLayout>
</LinearLayout>
