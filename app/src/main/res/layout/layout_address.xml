<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rel_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/white"
        android:padding="@dimen/dp10">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/dingwei"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_right"
            android:layout_toRightOf="@+id/iv_left"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_address_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="收货人：尼古拉斯-赵四"
                    android:textColor="@color/normal_black"
                    android:textSize="@dimen/sp14"
                    android:layout_toLeftOf="@+id/tv_address_phone"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_address_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="15888888888"
                    android:textColor="@color/normal_black"
                    android:textSize="@dimen/sp14"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp10"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_address_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dp5"
                android:maxLines="2"
                android:text="收货地址：尼古拉斯-赵四别墅8888号"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/sp14"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/xiayicengjixiaohui_2x"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_address_none"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/white"
        android:padding="@dimen/dp10">

        <ImageView
            android:id="@+id/iv_left_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/dingwei"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请添加收货地址"
            android:layout_toLeftOf="@+id/iv_right_none"
            android:layout_marginRight="@dimen/dp10"
            android:layout_centerVertical="true"
            android:textColor="@color/normal_red"
            android:textSize="@dimen/sp13"/>

        <ImageView
            android:id="@+id/iv_right_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/xiayicengjixiaohui_2x"/>
    </RelativeLayout>
</LinearLayout>