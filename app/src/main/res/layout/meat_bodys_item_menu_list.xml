<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp">

    <ImageView
        android:id="@+id/iv_gender_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp15"
        android:background="@mipmap/shaixuan_nv_2x" />


    <TextView
        android:id="@+id/tv_gender_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp16"
        android:layout_toRightOf="@+id/iv_gender_ic"
        android:text="女生"
        android:textColor="@color/black_new_two"
        android:textSize="@dimen/dp15" />

    <TextView
        android:id="@+id/meat_girls_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gender_type"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp8"
        android:layout_toRightOf="@+id/iv_gender_ic"
        android:text="sss"
        android:textColor="@color/base_FF3D6F"
        android:textSize="@dimen/dp11" />


    <com.merrichat.net.view.MyCheckBox
        android:id="@+id/mb_girls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp15"
        android:button="@drawable/selector_shaixuan"
        android:checked="false"
        android:enabled="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:background="#d9d9d9"></View>


</RelativeLayout>
