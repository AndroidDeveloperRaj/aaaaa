<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/activity_title"/>

        <include layout="@layout/layout_address"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:layout_marginTop="@dimen/dp10"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卖家昵称："
                android:textColor="@color/normal_black"
                android:textSize="@dimen/sp14"/>

            <TextView
                android:id="@+id/tv_market_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尼古拉斯-赵四"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/sp14"/>

        </LinearLayout>

        <include layout="@layout/layout_product_item"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dp10">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品单价"
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/sp12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_unit_price"
                    android:text="￥"
                    android:textColor="@color/normal_black"
                    android:textSize="@dimen/sp12"/>

                <TextView
                    android:id="@+id/tv_unit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp3"
                    android:text="0.00"
                    android:textColor="@color/normal_black"
                    android:textSize="@dimen/sp12"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运费"
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/sp12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_free"
                    android:text="￥"
                    android:textColor="@color/normal_black"
                    android:textSize="@dimen/sp12"/>

                <TextView
                    android:id="@+id/tv_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp3"
                    android:text="0.00"
                    android:textColor="@color/normal_black"
                    android:textSize="@dimen/sp12"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品数量"
                    android:textColor="@color/normal_gray"
                    android:textSize="@dimen/sp12"/>

                <TextView
                    android:id="@+id/tv_shop_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="1"
                    android:textColor="@color/normal_black"
                    android:textSize="@dimen/sp12"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品总价"
                    android:textColor="@color/normal_black"
                    android:textSize="@dimen/sp13"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_price"
                    android:layout_toLeftOf="@+id/tv_price"
                    android:text="￥"
                    android:textColor="@color/normal_red"
                    android:textSize="@dimen/sp12"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp3"
                    android:text="0.00"
                    android:textColor="@color/normal_red"
                    android:textSize="@dimen/sp14"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实付款(含运费)"
                    android:textColor="@color/normal_black"
                    android:textSize="@dimen/sp13"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_price_all"
                    android:layout_toLeftOf="@+id/tv_price_all"
                    android:text="￥"
                    android:textColor="@color/normal_red"
                    android:textSize="@dimen/sp12"/>

                <TextView
                    android:id="@+id/tv_price_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp3"
                    android:text="0.00"
                    android:textColor="@color/normal_red"
                    android:textSize="@dimen/sp14"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总计："
                android:textColor="@color/normal_black"
                android:textSize="@dimen/sp15"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_price_all_bottom"
                android:layout_toLeftOf="@+id/tv_price_all_bottom"
                android:text="￥"
                android:textColor="@color/normal_red"
                android:textSize="@dimen/sp12"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_price_all_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/dp3"
                android:text="0.00"
                android:textColor="@color/normal_red"
                android:textSize="@dimen/sp15"
                android:layout_marginRight="@dimen/dp15"
                android:textStyle="bold"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_comfirm_order"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shap_detail_bottom_background_left"
            android:text="提交订单"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"/>
    </LinearLayout>

</RelativeLayout>