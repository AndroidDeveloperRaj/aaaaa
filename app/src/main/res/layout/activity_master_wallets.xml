<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:layout_marginLeft="@dimen/dp70"
        android:layout_marginRight="@dimen/dp70"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cash"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_wallet_left_checked"
            android:gravity="center"
            android:text="现金"
            android:textColor="@color/white"
            android:textSize="@dimen/sp13" />

        <TextView
            android:id="@+id/tv_gold"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_wallet_right"
            android:gravity="center"
            android:text="讯美币"
            android:textColor="@color/tex_6D6D6D"
            android:textSize="@dimen/sp13" />
    </LinearLayout>


    <ImageView
        android:layout_width="@dimen/dp85"
        android:layout_height="@dimen/dp85"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp50"
        android:background="@mipmap/qianbao2x" />


    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp48"
        android:text="群主钱包余额"
        android:textColor="@color/base_888888"
        android:textSize="@dimen/dp15" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp10"
        android:text=""
        android:textColor="@color/black_new_two"
        android:textSize="@dimen/dp24" />

    <LinearLayout
        android:id="@+id/ll_withdraw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp40"
        android:layout_marginRight="@dimen/dp40"
        android:layout_marginTop="@dimen/dp70"
        android:background="@drawable/shape_onclick"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_withdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现到群主个人现金账户"
            android:textColor="@color/white"
            android:textSize="@dimen/dp15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_recharge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp40"
        android:layout_marginRight="@dimen/dp40"
        android:layout_marginTop="@dimen/dp15"
        android:background="@drawable/shape_cancle_new"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值"
            android:textColor="@color/black_new_two"
            android:textSize="@dimen/dp15" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_history_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看群交易记录"
            android:textColor="@color/base_888888"
            android:textSize="12sp" />
        <ImageView
            android:layout_width="5dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp3"
            android:layout_marginTop="@dimen/dp1"
            android:src="@mipmap/xiayiceng_button_tongyong2x" />

    </LinearLayout>
</LinearLayout>
