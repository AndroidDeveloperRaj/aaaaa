<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_catalog"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp35"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp15"
        android:text="A"
        android:textColor="@color/normal_gray" />

    <RelativeLayout
        android:id="@+id/rel_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView_check"
            android:layout_width="@dimen/dp23"
            android:layout_height="@dimen/dp23"
            android:src="@mipmap/accept_2x_none"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simple_header"
            android:layout_toRightOf="@+id/imageView_check"
            android:layout_width="@dimen/dp35"
            android:layout_height="@dimen/dp35"
            android:layout_centerVertical="true"
            fresco:placeholderImage="@mipmap/ic_preloading"
            fresco:roundAsCircle="true"
            android:layout_marginLeft="@dimen/dp10"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@id/simple_header"
            android:text="A"
            android:textColor="@color/normal_black"
            android:textSize="@dimen/dp15"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="@color/base_E2E5E7"
        android:layout_marginLeft="@dimen/dp10"/>

</LinearLayout>