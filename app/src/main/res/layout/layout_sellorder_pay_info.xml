<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10">

        <TextView
            android:id="@+id/tv_order_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号"
            android:textColor="@color/base_9E9FAB"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/tv_order_text"
            android:text=""
            android:textColor="@color/base_9E9FAB"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_copy_order_mem"
            android:layout_width="@dimen/dp31"
            android:layout_height="@dimen/dp15"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_button_copy"
            android:gravity="center"
            android:text="复制"
            android:textColor="@color/white"
            android:textSize="@dimen/sp10" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_express_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快递公司"
            android:textColor="@color/base_9E9FAB"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_express_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/tv_order_text"
            android:text=""
            android:textColor="@color/base_9E9FAB"
            android:textSize="@dimen/sp12" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_express_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_express_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运单号     "
            android:textColor="@color/base_9E9FAB"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_express_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/tv_express_text"
            android:text=""
            android:textColor="@color/base_9E9FAB"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_copy_express_mem"
            android:layout_width="@dimen/dp31"
            android:layout_height="@dimen/dp15"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_button_copy"
            android:gravity="center"
            android:text="复制"
            android:textColor="@color/white"
            android:textSize="@dimen/sp10" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式"
            android:textColor="@color/base_9E9FAB"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_pay_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/tv_order_text"
            android:text=""
            android:textColor="@color/base_9E9FAB"
            android:textSize="@dimen/sp12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款时间"
            android:textColor="@color/base_9E9FAB"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_pay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/tv_order_text"
            android:text=""
            android:textColor="@color/base_9E9FAB"
            android:textSize="@dimen/sp12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_deliver_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发货时间"
            android:textColor="@color/base_9E9FAB"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_deliver_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/tv_order_text"
            android:text=""
            android:textColor="@color/base_9E9FAB"
            android:textSize="@dimen/sp12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sign_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签收时间"
            android:textColor="@color/base_9E9FAB"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_sign_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/tv_order_text"
            android:text=""
            android:textColor="@color/base_9E9FAB"
            android:textSize="@dimen/sp12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_refund_time_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发起时间"
            android:textColor="@color/base_9E9FAB"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_refund_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/tv_order_text"
            android:text=""
            android:textColor="@color/base_9E9FAB"
            android:textSize="@dimen/sp12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_refund_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp10"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10">

        <TextView
            android:id="@+id/tv_refund_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款时间"
            android:textColor="@color/base_9E9FAB"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/tv_refund_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/tv_order_text"
            android:text="7816633882"
            android:textColor="@color/base_9E9FAB"
            android:textSize="@dimen/sp12" />

    </LinearLayout>
</LinearLayout>