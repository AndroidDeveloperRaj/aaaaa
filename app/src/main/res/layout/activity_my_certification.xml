<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <RelativeLayout
        android:id="@+id/rl_menwomen_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp10">

        <TextView
            style="@style/text_222222_15sp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp44"
            android:gravity="center_vertical"
            android:text="男神/女神认证" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:paddingRight="@dimen/dp10">

            <TextView
                style="@style/text_ffffff_7sp"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp9"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp5"
                android:background="@drawable/shape_text_hot"
                android:gravity="center"
                android:text="HOT"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_menwomen_status"
                style="@style/text_9e9fab_12sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/dp10"
                android:drawableRight="@mipmap/xiayiceng_button_tongyong2x"
                android:gravity="center"
                android:text="认证成为男神/女神收益更多" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_person_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp10"
        android:visibility="gone">

        <TextView
            style="@style/text_222222_15sp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp44"
            android:gravity="center_vertical"
            android:text="身份认证" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:paddingRight="@dimen/dp10">

            <TextView
                style="@style/text_ffffff_7sp"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp9"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp5"
                android:background="@drawable/shape_text_hot"
                android:gravity="center"
                android:text="HOT"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_id_certification_status"
                style="@style/text_9e9fab_12sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/dp10"
                android:drawableRight="@mipmap/xiayiceng_button_tongyong2x"
                android:gravity="center"
                android:text="身份认证之后才可提现" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>