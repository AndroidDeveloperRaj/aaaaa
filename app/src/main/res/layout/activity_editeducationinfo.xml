<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <RelativeLayout
        android:id="@+id/rl_xuexiao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp64"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="学校         "
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp15" />

        <EditText
            android:id="@+id/tv_xuexiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="@dimen/dp10"
            android:layout_toRightOf="@+id/tv2"
            android:background="@null"
            android:hint="必填"
            android:textColorHint="@color/black_new_two"
            android:textColor="@color/normal_black"
            android:textSize="@dimen/sp15" />

        <ImageView
            android:id="@+id/perfection_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/xiayiceng_button_tongyong2x" />
    </RelativeLayout>

    <View style="@style/line_width_left" />

    <RelativeLayout
        android:id="@+id/rl_zhuanye"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp64"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="专业         "
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp15" />

        <EditText
            android:id="@+id/tv_zhuanye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="@dimen/dp10"
            android:layout_toRightOf="@+id/tv1"
            android:background="@null"
            android:hint="必填"
            android:textColorHint="@color/black_new_two"

            android:textColor="@color/normal_black"
            android:textSize="@dimen/sp15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/xiayiceng_button_tongyong2x" />
    </RelativeLayout>

    <View style="@style/line_width_left" />

    <RelativeLayout
        android:id="@+id/rl_xueli"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp64"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="学历         "
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/tv_xueli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="@dimen/dp10"
            android:layout_toRightOf="@+id/tv3"
            android:hint="必选"
            android:textColorHint="@color/black_new_two"

            android:textColor="@color/normal_black"
            android:textSize="@dimen/sp15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/xiayiceng_button_tongyong2x" />
    </RelativeLayout>

    <View style="@style/line_width_left" />

    <RelativeLayout
        android:id="@+id/rl_starttime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp64"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="开始时间"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/tv_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="@dimen/dp10"
            android:layout_toRightOf="@+id/tv4"
            android:hint="必选"
            android:textColorHint="@color/black_new_two"

            android:textColor="@color/normal_black"
            android:textSize="@dimen/sp15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/xiayiceng_button_tongyong2x" />
    </RelativeLayout>

    <View style="@style/line_width_left" />

    <RelativeLayout
        android:id="@+id/rl_endtime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp64"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="结束时间"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/tv_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="@dimen/dp10"
            android:layout_toRightOf="@+id/tv5"
            android:hint="必选"
            android:textColorHint="@color/black_new_two"
            android:textColor="@color/normal_black"
            android:textSize="@dimen/sp15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/xiayiceng_button_tongyong2x" />
    </RelativeLayout>

    <View style="@style/line_width_left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginTop="@dimen/dp35"
        android:gravity="center"
        android:paddingLeft="@dimen/dp40"
        android:paddingRight="@dimen/dp40">

        <TextView
            android:id="@+id/tv_delete"
            style="@style/text_ffffff_15sp"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp50"
            android:layout_weight="1"
            android:background="@drawable/shape_button_login_true"
            android:gravity="center"
            android:text="删除"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_save"
            style="@style/text_ffffff_15sp"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_button_login_true"
            android:gravity="center"
            android:text="保存" />
    </LinearLayout>

</LinearLayout>