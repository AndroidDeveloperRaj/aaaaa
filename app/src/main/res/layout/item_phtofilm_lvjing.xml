<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/ll_photofilmlvjing_header"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp70"
        android:background="@color/F3F3F3">

        <ImageView
            android:layout_width="@dimen/dp18"
            android:layout_height="@dimen/dp18"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_photofilm_lvjing_wu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/dp3"
            android:text="无"
            android:textColor="@drawable/selector_photofilm_lvjing_wu"
            android:textSize="@dimen/dp11" />

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/ll_photofilmlvjing_header_bendi"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp70"

        android:layout_marginLeft="@dimen/dp10"
        android:background="@color/F3F3F3">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp3"
            android:text="本地"
            android:textColor="@drawable/selector_photofilm_lvjing_wu"
            android:textSize="@dimen/sp10" />

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/ll_photofilmlvjing_header_sousuo"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp70"
        android:layout_marginLeft="@dimen/dp10"
        android:background="@color/F3F3F3"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/dp3"
            android:text="搜索"
            android:textColor="@drawable/selector_photofilm_lvjing_wu"
            android:textSize="@dimen/dp10" />

    </RelativeLayout>
</LinearLayout>