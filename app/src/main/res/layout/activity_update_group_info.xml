<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp152">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/icon_group"
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp40"
                app:placeholderImage="@mipmap/ic_preloading"
                app:roundAsCircle="true"
                app:roundingBorderColor="@color/FF3D6F"
                app:roundingBorderWidth="@dimen/dp0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon_group"
                android:layout_marginTop="@dimen/dp20"
                android:gravity="center_horizontal"
                android:text="设置群logo，让更多志同道合的朋友加入。"
                android:textColor="#878787"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:background="@color/base_E2E5E7" />


        <RelativeLayout
            android:id="@+id/rl_enter_group_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp64"
            android:layout_marginTop="@dimen/dp10">

            <TextView
                android:id="@+id/tv_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:hint="请输入群名称"
                android:maxEms="10"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/normal_black"
                android:textSize="@dimen/sp15" />


            <ImageView
                android:layout_width="@dimen/dp7"
                android:layout_height="@dimen/dp12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:background="@mipmap/xiayiceng_button_tongyong2x" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@color/base_E2E5E7" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_enter_group_position"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp64">

            <TextView
                android:id="@+id/tv_group_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp25"
                android:hint="选择群地点"
                android:lines="1"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/sp15" />


            <ImageView
                android:layout_width="@dimen/dp7"
                android:layout_height="@dimen/dp12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:background="@mipmap/xiayiceng_button_tongyong2x" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:layout_alignParentBottom="true"
                android:background="@color/base_E2E5E7" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_enter_group_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp64">

            <TextView
                android:id="@+id/tv_group_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp30"
                android:hint="输入群公告"
                android:lines="1"
                android:text=""
                android:textColor="@color/normal_black"
                android:textSize="@dimen/sp15" />

            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/dp7"
                android:layout_height="@dimen/dp12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:background="@mipmap/xiayiceng_button_tongyong2x" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@color/base_E2E5E7" />
        </RelativeLayout>



        <TextView
            android:id="@+id/select_group_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp43"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp10"
            android:text="选择群类别"
            android:textColor="#FF3D6F"
            android:textSize="@dimen/sp13" />

        <RelativeLayout
            android:id="@+id/group_type_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp64"
            android:layout_below="@+id/line"
            android:background="@color/white">

            <TextView
                android:id="@+id/check_type"
                android:layout_width="@dimen/dp20"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp30"
                android:background="@mipmap/xuanzhaopian_2x" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_toRightOf="@+id/check_type"
                android:text="交流群（不可以发布交易信息）"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/sp15" />

        </RelativeLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_below="@+id/group_type_1"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="-0.5dp"
            android:background="@color/base_E2E5E7" />

        <RelativeLayout
            android:id="@+id/group_type_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp64"
            android:layout_below="@+id/line2"
            android:background="@color/white">

            <TextView
                android:id="@+id/check_type_1"
                android:layout_width="@dimen/dp20"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp30"
                android:background="@drawable/checkbox_video_permission_selector" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_toRightOf="@+id/check_type_1"
                android:text="交易市场群（所有人可发布交易）"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/sp15" />

        </RelativeLayout>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_below="@+id/group_type_2"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="-0.5dp"
            android:background="@color/base_E2E5E7" />

        <RelativeLayout
            android:id="@+id/group_type_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp64"
            android:layout_below="@+id/line3"
            android:background="@color/white">

            <TextView
                android:id="@+id/check_type_2"
                android:layout_width="@dimen/dp20"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp30"
                android:background="@drawable/checkbox_video_permission_selector" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_toRightOf="@+id/check_type_2"
                android:text="电商群（仅群主和管理员可发布交易）"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/sp15" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@color/base_E2E5E7" />

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp11"
            android:layout_marginRight="@dimen/dp11"
            android:layout_toRightOf="@+id/group_type_3"
            android:gravity="center_vertical"
            android:text="群交易佣金设置（群主和讯美平台五五分成比例）"
            android:textColor="@color/FF3D6F"
            android:textSize="@dimen/sp13"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_real_commission"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp64"
            android:layout_below="@+id/line3"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp15"
                android:text="实物交易群佣金设置"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/sp15" />

            <ImageView
                android:id="@+id/iv_5"
                android:layout_width="@dimen/dp7"
                android:layout_height="@dimen/dp12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:background="@mipmap/xiayiceng_button_tongyong2x" />


            <TextView
                android:id="@+id/tv_real_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:layout_toLeftOf="@+id/iv_5"
                android:text=""
                android:textColor="@color/FF3D6F"
                android:textSize="@dimen/sp15" />
        </RelativeLayout>

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_below="@+id/group_type_2"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="-0.5dp"
            android:background="@color/base_E2E5E7" />

        <RelativeLayout
            android:id="@+id/rl_virtual_commission"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp64"
            android:layout_below="@+id/line3"
            android:background="@color/white"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp15"
                android:text="虚拟交易群佣金设置"
                android:textColor="@color/normal_black"
                android:textSize="@dimen/sp15" />

            <ImageView
                android:id="@+id/iv_6"
                android:layout_width="@dimen/dp7"
                android:layout_height="@dimen/dp12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:background="@mipmap/xiayiceng_button_tongyong2x" />


            <TextView
                android:id="@+id/tv_virtual_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:layout_toLeftOf="@+id/iv_6"
                android:text=""
                android:textColor="@color/FF3D6F"
                android:textSize="@dimen/sp15" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="-0.5dp"
            android:background="@color/base_E2E5E7" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp20" />
    </LinearLayout>
</ScrollView>