<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp21"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp5"
        android:background="@drawable/shape_timer_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/dp8"
        android:paddingRight="@dimen/dp8"
        android:text="1秒"
        android:textColor="@color/white"
        android:textSize="@dimen/dp12" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lay_speed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:layout_above="@+id/lay_control"
            android:layout_marginLeft="@dimen/dp32"
            android:layout_marginRight="@dimen/dp32"
            android:background="@drawable/shape_black"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center"
                android:text="极慢"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="慢"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_white"
                android:gravity="center"
                android:text="标准"
                android:textColor="@color/c_6b6c73" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="快"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="极快"
                android:textColor="@color/white" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lay_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/dp32"
            android:paddingTop="@dimen/dp23"
            android:textColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_toLeftOf="@+id/iv_record"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/iv_record_beautify"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp5"
                    android:drawableTop="@mipmap/icon_record_beautify"
                    android:gravity="center"
                    android:text="美颜"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp10" />

                <TextView
                    android:id="@+id/iv_record_magic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp5"
                    android:drawableTop="@mipmap/icon_record_magic"
                    android:gravity="center"
                    android:text="魔拍"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp10" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/icon_record_video_pause" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_record"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_record_dele"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_record_dele" />

                <ImageView
                    android:id="@+id/iv_record_complete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_tp_complete" />

            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>