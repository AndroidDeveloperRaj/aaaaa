<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_bulr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lin_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view_share_top_touch"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10">

            <LinearLayout
                android:id="@+id/lin_pengyouquan"
                android:layout_width="@dimen/dp75"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp48"
                    android:layout_height="@dimen/dp48"
                    android:src="@mipmap/fenxiang_pengyouquan_2x"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="朋友圈"
                    android:textColor="@color/black_new_two"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_wechat"
                android:layout_width="@dimen/dp75"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp48"
                    android:layout_height="@dimen/dp48"
                    android:src="@mipmap/fenxiang_weixin_2x"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="微信"
                    android:textColor="@color/black_new_two"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_weibo"
                android:layout_width="@dimen/dp75"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="@dimen/dp48"
                    android:layout_height="@dimen/dp48"
                    android:src="@mipmap/fenxiang_weibo_2x"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="微博"
                    android:textColor="@color/black_new_two"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_qq"
                android:layout_width="@dimen/dp75"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp48"
                    android:layout_height="@dimen/dp48"
                    android:src="@mipmap/fenxiang_qq_2x"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="QQ"
                    android:textColor="@color/black_new_two"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:visibility="gone"
            android:id="@+id/view_share_top_touch"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@+id/lay_share2"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20"
            android:background="@color/base_E2E5E7"/>

        <LinearLayout
            android:id="@+id/lay_share2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp18"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10">

            <LinearLayout
                android:id="@+id/layout_collect"
                android:layout_width="@dimen/dp75"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_collect"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:src="@mipmap/shoucang_gengduo_2x"/>

                <TextView
                    android:id="@+id/tv_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="收藏"
                    android:textColor="@color/black_new_two"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_private_lock"
                android:layout_width="@dimen/dp75"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp30">

                <ImageView
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:src="@mipmap/icon_fenxiang_simi"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="公开范围"
                    android:textColor="@color/black_new_two"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_jubao"
                android:layout_width="@dimen/dp75"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp30">

                <ImageView
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:src="@mipmap/icon_fenxiang_jubao"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="举报"
                    android:textColor="@color/black_new_two"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_dele"
                android:layout_width="@dimen/dp75"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp30">

                <ImageView
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:src="@mipmap/icon_fenxiang_shanchu"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="删除"
                    android:textColor="@color/black_new_two"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/lay_share2"
        android:background="@color/base_E2E5E7"/>
    
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:background="@color/white"
        android:text="取消"
        android:textColor="@color/base_888888"
        android:textSize="@dimen/sp15"/>
</LinearLayout>