<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_allow_all"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44">

            <TextView
                android:id="@+id/tv_allow_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:text="允许任何人加群"
                android:textColor="@color/black_new_two"
                android:textSize="@dimen/dp15" />

            <ImageView
                android:id="@+id/iv_allow_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:src="@mipmap/accept_2x_true"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp10"
            android:background="@color/background" />

        <RelativeLayout
            android:id="@+id/rl_not_allowed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44">

            <TextView
                android:id="@+id/tv_not_allowed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:text="不允许任何人加群"
                android:textColor="@color/black_new_two"
                android:textSize="@dimen/dp15" />

            <ImageView
                android:id="@+id/iv_not_allowed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:src="@mipmap/accept_2x_true"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp10"
            android:background="@color/background" />

        <RelativeLayout
            android:id="@+id/rl_need_to_review"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44">

            <TextView
                android:id="@+id/tv_need_to_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp10"
                android:text="需要管理员审核"
                android:textColor="@color/black_new_two"
                android:textSize="@dimen/dp15" />

            <ImageView
                android:id="@+id/iv_need_to_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp10"
                android:src="@mipmap/accept_2x_true"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
