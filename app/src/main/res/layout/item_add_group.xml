<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simple_header"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        fresco:failureImageScaleType="centerInside"
        fresco:placeholderImage="@mipmap/ic_preloading"
        fresco:roundAsCircle="true" />


    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginTop="@dimen/dp14"
        android:layout_toRightOf="@+id/simple_header"
        android:text="北京购物群"
        android:textColor="@color/normal_black"
        android:textSize="@dimen/sp15" />

    <Button
        android:id="@+id/btn_group_type"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp15"
        android:layout_below="@+id/tv_group_name"
        android:layout_above="@+id/tv_group_content"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_toRightOf="@+id/simple_header"
        android:background="#83CCF0"
        android:gravity="center"
        android:text="购物群"
        android:textColor="@color/white"
        android:textSize="@dimen/sp10" />


    <TextView
        android:id="@+id/btn_add_group"
        android:layout_width="65dp"
        android:layout_height="@dimen/dp24"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp14"
        android:background="@drawable/shape_red_1"
        android:gravity="center"
        android:text="加入"
        android:layout_marginRight="@dimen/dp10"
        android:textColor="@color/normal_red"
        android:textSize="@dimen/sp13" />


    <TextView
        android:layout_marginTop="@dimen/dp5"
        android:id="@+id/tv_group_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simple_header"
        android:layout_marginLeft="@dimen/dp65"
        android:background="@drawable/shape_textview_des"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dp5"
        android:maxLines="3"
        android:layout_marginRight="@dimen/dp10"
        android:padding="@dimen/dp10"
        android:text="群介绍:这是一个购物群，可以折行显示，注意行高"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/sp12" />


    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_group_content"
        android:layout_marginLeft="@dimen/dp65"
        android:drawableLeft="@mipmap/location"
        android:drawablePadding="@dimen/dp5"
        android:paddingBottom="@dimen/dp15"
        android:paddingTop="@dimen/dp15"
        android:text="北京市海淀区"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/sp10" />

    <View
        android:layout_marginLeft="@dimen/dp65"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="@color/base_E2E5E7" />


</RelativeLayout>