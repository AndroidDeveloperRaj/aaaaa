<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:text="更改群 群主需要实名认证"
                android:textColor="@color/black_new_two"
                android:textSize="@dimen/dp15" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_exchange_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp65"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_exchange_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:src="@mipmap/button_weixuanzhong_shixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp25"
                android:text="交流群(不可以发布交易信息）"
                android:textColor="@color/black_new_two"
                android:textSize="@dimen/dp15" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@color/base_E2E5E7" />


        <LinearLayout
            android:id="@+id/ll_ctc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp65"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ctc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:src="@mipmap/button_weixuanzhong_shixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp25"
                android:text="交易市场群（所有人可发布交易）"
                android:textColor="@color/black_new_two"
                android:textSize="@dimen/dp15" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@color/base_E2E5E7" />

        <LinearLayout
            android:id="@+id/ll_btc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp65"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_btc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:src="@mipmap/button_weixuanzhong_shixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp25"
                android:text="电商群（仅群主和管理员可发布交易）"
                android:textColor="@color/black_new_two"
                android:textSize="@dimen/dp15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btc_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:background="@color/background" />


            <LinearLayout
                android:id="@+id/ll_choose_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp44"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="设置/修改群规模"
                    android:textColor="@color/black_new_two"
                    android:textSize="@dimen/dp15" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp10"
                    android:gravity="center_vertical|right">

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/base_9E9FAB"
                        android:textSize="@dimen/dp12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp7"
                        android:src="@mipmap/xiayiceng_button_tongyong2x" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:background="@color/background" />


            <RelativeLayout
                android:id="@+id/rl_trading_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp44">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="群商品设置"
                    android:textColor="@color/black_new_two"
                    android:textSize="@dimen/dp15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:src="@mipmap/xiayiceng_button_tongyong2x" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ctc_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp44"
                android:background="@color/background"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="群交易佣金设置（群主和讯美平台五五分成比例）"
                    android:textColor="@color/FF3D6F"
                    android:textSize="@dimen/dp13" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_inkind_commission"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp44">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="实物交易群佣金设置"
                    android:textColor="@color/black_new_two"
                    android:textSize="@dimen/dp15" />


                <TextView
                    android:id="@+id/tv_nkind_commission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_toLeftOf="@+id/iv_shiwu_jiantou"
                    android:text=""
                    android:textColor="@color/FF3D6F"
                    android:textSize="@dimen/dp15" />

                <ImageView
                    android:id="@+id/iv_shiwu_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:src="@mipmap/xiayiceng_button_tongyong2x" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@color/base_E2E5E7" />

            <RelativeLayout
                android:id="@+id/rl_virtual_commission"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp44">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="虚拟交易群佣金设置"
                    android:textColor="@color/black_new_two"
                    android:textSize="@dimen/dp15" />

                <TextView
                    android:id="@+id/tv_virtual_commission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_toLeftOf="@+id/iv_xuni_jiantou"
                    android:text=""
                    android:textColor="@color/FF3D6F"
                    android:textSize="@dimen/dp15" />

                <ImageView
                    android:id="@+id/iv_xuni_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:src="@mipmap/xiayiceng_button_tongyong2x" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
