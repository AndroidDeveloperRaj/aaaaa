<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dp10"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp10">

        <View
            android:layout_width="@dimen/dp2"
            android:layout_height="@dimen/dp13"
            android:background="@color/normal_red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:text="商品规格"
            android:textColor="@color/black_new_two"
            android:textSize="@dimen/sp13"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_2"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:paddingTop="@dimen/dp15"
        android:paddingBottom="@dimen/dp15">

        <TextView
            android:id="@+id/tv_shop_sku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是商品规格"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/dp5"
            android:textColor="@color/normal_black"
            android:textSize="@dimen/sp14"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp10">

        <View
            android:layout_width="@dimen/dp2"
            android:layout_height="@dimen/dp13"
            android:background="@color/normal_red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp5"
            android:text="商品描述"
            android:textColor="@color/black_new_two"
            android:textSize="@dimen/sp13"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp54"
        android:background="@color/white_2"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:paddingTop="@dimen/dp15"
        android:paddingBottom="@dimen/dp15">

        <TextView
            android:id="@+id/tv_shop_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是商品描述"
            android:gravity="center_vertical"
            android:lineSpacingExtra="@dimen/dp5"
            android:textColor="@color/normal_black"
            android:textSize="@dimen/sp14"/>
    </LinearLayout>

</LinearLayout>