<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >
    <RelativeLayout
        android:id="@+id/id_bottom_ly"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_green"
        android:clickable="true" >

        <TextView
            android:id="@+id/tv_check_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp15"
            android:text="选择"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/iv_check_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_photo_bg"
            android:button="@null"
            android:layout_toLeftOf="@id/tv_check_photo"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp5"
            />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_base_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/id_bottom_ly"
        />

</RelativeLayout>